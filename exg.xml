<?xml version="1.0" encoding="UTF-8"?>
<extension type="plugin" version="3.0" group="content" method="upgrade">
	<name>PLG_CONTENT_EXG</name>
	<author>Nicolas Ogier</author>
	<creationDate>1-May-2013</creationDate>
    <copyright>This extension in released under the GNU/GPL License - http://www.gnu.org/copyleft/gpl.html</copyright>
    <authorEmail>webmaster@nicolas-ogier.fr</authorEmail>
    <authorUrl>http://www.nicolas-ogier.fr/</authorUrl>
    <version>3-1.0</version>
    <description>PLG_CONTENT_EXG_XML_DESCRIPTION</description>
    <files>
    	<filename plugin="exg">exg.php</filename>
    	<filename plugin="exg">index.html</filename>
    	<folder plugin="exg">plugin_exg</folder>
    </files>
  	<languages>
  		<language tag="en-GB">language/en-GB/en-GB.plg_content_exg.ini</language>
  		<language tag="en-GB">language/en-GB/en-GB.plg_content_exg.sys.ini</language>
  	</languages>
  	<config>
  		<fields name="params">
  			 <fieldset name="EXG_GALLERY_PARAMETERS">
  			 	<field name="path_root" type="text" default="images" description="PLG_CONTENT_EXG_PATH_DESCRIPTION" label="PLG_CONTENT_EXG_PATH_LABEL" />
  				<field name="exg_tag" type="text" default="gallery" description="PLG_CONTENT_EXG_TAG_DESCRIPTION" label="PLG_CONTENT_EXG_TAG_LABEL" />
  			 	<field name="min_width" type="text" default="120" description="PLG_CONTENT_EXG_MINWIDTH_DESCRIPTION" label="PLG_CONTENT_EXG_MINWIDTH_LABEL" />
  			 	<field name="min_height" type="text" default="100" description="PLG_CONTENT_EXG_MINHEIGHT_DESCRIPTION" label="PLG_CONTENT_EXG_MINHEIGHT_LABEL" />
  			 	<field name="adaptative" type="radio" class="btn-group" default="1" description="PLG_CONTENT_EXG_DISPLAYTHUMBNAIL_DESCRIPTION" label="PLG_CONTENT_EXG_DISPLAYTHUMBNAIL_LABEL" >
 					<option value="0">PLG_CONTENT_EXG_STRICSIZE</option>
                    <option value="1">PLG_CONTENT_EXG_ADAPTATIVESIZE</option>
                </field>
  			 	</fieldset>
  			 	<fieldset name="EXG_GALLERY_RESPONSIVE_PARAMETERS">
  			 	<field name="num_device_bigscreen" type="text" default="4" description="PLG_CONTENT_EXG_NUMDEVICESBIGCREEN_DESCRIPTION" label="PLG_CONTENT_EXG_NUMDEVICEBIGSCREEN_LABEL" />
  			 	<field name="num_device_screen" type="text" default="4" description="PLG_CONTENT_EXG_NUMDEVICESCREEN_DESCRIPTION" label="PLG_CONTENT_EXG_NUMDEVICESCREEN_LABEL" />
  			 	<field name="num_device_laptop" type="text" default="3" description="PLG_CONTENT_EXG_NUMDEVICELAPTOP_DESCRIPTION" label="PLG_CONTENT_EXG_NUMDEVICELAPTOP_LABEL" />
  			 	<field name="num_device_tablet" type="text" default="2" description="PLG_CONTENT_EXG_NUMDEVICETABLET_DESCRIPTION" label="PLG_CONTENT_EXG_NUMDEVICETABLET_LABEL" />
  			 	<field name="num_device_smartphone" type="text" default="1" description="PLG_CONTENT_EXG_NUMDEVICESMARTPHONE_DESCRIPTION" label="PLG_CONTENT_EXG_NUMDEVICESMARTPHONE_LABEL" />
  			 	<field name="thumb_margin" type="text" default="10" description="PLG_CONTENT_EXG_THUMBMARGIN_DESCRIPTION" label="PLG_CONTENT_EXG_THUMBMARGIN_LABEL" />
  			 </fieldset>
  		</fields>
  	</config>	  
</extension>